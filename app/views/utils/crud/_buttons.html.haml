= form.submit save, class: "btn btn-primary btn-sm"
= link_to t("cancel"), cancel_path, class: "btn btn-secondary btn-sm"
- if !object.new_record? && can?(:destroy, object)
  = link_to t("delete"), delete_path, class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: t("sure") }

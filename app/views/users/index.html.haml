- set_meta_tags title: t("user.users")

%section
  .header.text-center
    %h3.d-inline= t("user.users")
  .body
    .row
      %div{class: Sni::Center.call(xl: 6, lg: 8, md: 10, sm: 12)}
        %table{class: "table table-bordered table-sm mt-3"}
          %thead
            %tr
              %th= t("user.name")
              %th= t("user.email")
              %th.text-center= t("user.admin")
              %th.text-center= t("otp.otp")
          %tbody
            - @users.each do |user|
              %tr
                %td= link_to user.name, user
                %td= user.email
                %td.text-center= admin(user)
                %td.text-center
                  = otp_required(user)
                  = otp_active(user)
  .footer.text-center
    - if can?(:create, User)
      = link_to t("user.new"), new_user_path, class: "btn btn-primary btn-sm"
